<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.OtherProfileFragment"
        android:background="@color/mainBg">

        <include
            android:id="@+id/topBarOtherProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/fragment_base"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/otherProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avatar"
            android:layout_marginTop="@dimen/marginTopProfile"
            app:layout_constraintTop_toBottomOf="@id/topBarOtherProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/otherUserName"/>

        <TextView
            android:id="@+id/otherUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherProfilePic"
            app:layout_constraintBottom_toTopOf="@id/emailTextOther"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/titleTextSize"/>

        <TextView
            android:id="@+id/emailTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherUserName"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:layout_marginTop="@dimen/marginCustomEditText"
            android:text="@string/email"
            android:textColor="@color/lighterGray"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/setEmailTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailTextOther"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/usernameTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setEmailTextOther"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:layout_marginTop="@dimen/marginCustomEditText"
            android:text="@string/username"
            android:textColor="@color/lighterGray"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/setUsernameTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameTextOther"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/phoneNrTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setUsernameTextOther"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:layout_marginTop="@dimen/marginCustomEditText"
            android:text="@string/phoneNr"
            android:textColor="@color/lighterGray"
            android:textSize="@dimen/textSize"/>

        <TextView
            android:id="@+id/setPhoneNrTextOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneNrTextOther"
            android:layout_marginStart="@dimen/priceMarginStart"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"/>

        <Button
            android:id="@+id/publishButtonOtherProfile"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setPhoneNrTextOther"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/marginCustomEditText"
            android:layout_marginBottom="@dimen/marginTopSplash"
            android:text="@string/send_a_chat_message"
            android:textColor="@android:color/white"
            android:background="@drawable/gray_button_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>